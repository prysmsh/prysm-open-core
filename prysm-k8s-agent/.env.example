# KubeAccess Agent Configuration

# Agent Identification
CLUSTER_ID=my-cluster-001
AGENT_ID=my-cluster-001-agent
AGENT_TOKEN=agent_token_from_kubeaccess_backend
ORGANIZATION_ID=1

# Backend Configuration
BACKEND_URL=http://kubeaccess-backend:8080

# Logging Configuration
ENABLE_LOGGING=true
LOG_INGESTION_URL=http://log-ingestion-service:8090
LOG_PRIVATE_LINK_URL=https://private-link-ingestion.derp.internal:8090
LOG_PRIVATE_LINK_KEY=org1_private_derp_key_here
USE_PRIVATE_LINK=true
DERP_REGION=us-west-1

# Log Collection Settings
LOG_BATCH_SIZE=100
LOG_BATCH_TIMEOUT=30s
LOG_COLLECTION_INTERVAL=30s
LOG_MAX_RETRIES=3
LOG_MAX_MESSAGE_SIZE=32768

# Log Sources (comma-separated: pod,event,audit,system,ingress,network)
LOG_SOURCES=pod,event,system

# Log Levels (comma-separated: trace,debug,info,warn,error,fatal)
LOG_LEVELS=info,warn,error,fatal

# Exclude Namespaces (comma-separated)
LOG_EXCLUDE_NAMESPACES=kube-system,kube-public,kube-node-lease

# Additional Configuration
KUBECONFIG=/root/.kube/config
KUBE_MASTER_URL=